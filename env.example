# User Information (required)
USER_NAME=John Doe
USER_EMAIL=john.doe@example.com

# Customer Information (provide either ID or NAME)
CUSTOMER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# CUSTOMER_NAME=TechCorp Solutions

# Role Information (provide either ID or NAME)
ROLE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# ROLE_NAME=customer_account_owner

# Database Connection (required)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database_name

# NATS Connection (required)
NATS_URL=nats://localhost:4222
NATS_STREAM=user_events
NATS_SUBJECT=users.registered

# NATS Authentication (optional)
# NATS_USER=your_nats_user
# NATS_PASSWORD=your_nats_password

# Any additional environment variables you want included in the event
# (they will be included in the NATS event payload)
ENVIRONMENT=production
SOURCE_SYSTEM=registration_portal
